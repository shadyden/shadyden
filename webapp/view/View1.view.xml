<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="mah.srm.ers.controller.View1">
<Page title="View 1">
<headerContent>
<Button icon="sap-icon://action" press="onNext"></Button>
</headerContent>
<content>
<SearchField id="ser" search="onSearch" liveChange="onSearch"></SearchField>
<List id="list" items="{/fruits}" selectionChange="onItemSelect"  mode="MultiSelect">  
 <headerToolbar>
 <Toolbar>
 <Button icon="sap-icon://delete" press="onDelete" tooltip="Delete Selected Item"></Button>
 </Toolbar>
 </headerToolbar>
 <items>
  
<ObjectListItem  intro="{type}" title="{name}" number="{price}"
     numberUnit="{currency}" icon="{imageURL}">
    
<firstStatus>
<ObjectStatus text="{status}" state="{path: 'status', formatter :'.formatter.getStatus'}"></ObjectStatus>
</firstStatus>
 </ObjectListItem>
</items>
</List>
<!-- <Button text="Navigate" press="onNext"></Button> -->
</content>
</Page>
</mvc:View>